-- recebe uma lista de inteiros e retorna uma lista de tuplas de valor e indice


indexedList : List Int -> List ( Int, Int )
indexedList list =
    List.indexedMap Tuple.pair list



-- recebe um indice e uma lista retorna uma lista somente com o indice


getByIndex : Int -> List ( Int, Int ) -> List ( Int, Int )
getByIndex i list =
    List.filter (\n -> Tuple.first n == i) list



-- produz os shapes da linha horizontal


mapRow : Int -> ( Int, Int ) -> List ( Int, Int ) -> Maybe Shape
mapRow rowIndex elem row =
    if Tuple.first elem == 0 || Tuple.second elem == 0 then
        -- ignora o primeiro elemento e os elementos com valor 0
        Nothing

    else if [ ( Tuple.first elem - 1, 0 ) ] == getByIndex (Tuple.first elem - 1) row then
        -- ignora se o elemento anterior for zero
        Nothing

    else if [ ( Tuple.first elem - 1, 2 ) ] == getByIndex (Tuple.first elem - 1) row && Tuple.second elem == 2 then
        -- faz uma linha dupla
        Just (move ((Tuple.first elem - 1) * 3) (rowIndex * 2) (line 4 horizontal double))

    else
        -- faz uma linha simples
        Just (move ((Tuple.first elem - 1) * 3) (rowIndex * 2) (line 4 horizontal single))


generateRow : List Int -> Int -> List Shape
generateRow row rowIndex =
    List.filterMap identity <|
        List.map (\x -> mapRow rowIndex x (indexedList row)) (indexedList row)


